<h1><%= @album.name %></h1>
<h3>Info</h3>
<ul>
  <li>Band: <%= @album.band.name %></li>
  <li>Type: <%= @album.ttype %></li>
</ul>

<h3>Tracks</h3>
<ul>
  <%= render @album.tracks %>
</ul>
<br>

<%= link_to "New Track", new_album_track_url(@album) %>
<br>
<%= link_to "Edit Album", edit_album_url(@album) %>
<br>
<%= link_to "Back to #{@album.band.name}", band_url(@album.band_id) %>
<br>
<br>
<%= link_to "Delete Album", album_url(@album), method: :delete %>
